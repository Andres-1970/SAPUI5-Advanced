<mvc:View controllerName="ui5.SAPUI5.controller.HelloPanel"
                    xmlns="sap.m"
                    xmlns:mvc="sap.ui.core.mvc"
                    xmlns:core="sap.ui.core"
                    displayBlock="true">
        <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto"
                                              expandable="{device>/system/phone}"
                                              expanded="{= !${device>/system/phone} }">
            <content>
                <Button id="helloDialogButton"
                        text="{i18n>helloDialogBut}" 
                        press=".onOpenDialog" 
                        class="sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"/>
                <Button text="{i18n>showHelloButtonText}" 
                        press=".onShowHello" 
                        class="sapUiSmallMarginEnd sapUiHideOnDesktop"
                        icon="sap-icon://action"/>
                    <Input value="{/recipient/name}"
                           valueLiveUpdate="true"
                           width="60%"/>
                    <Text text="Hello {/recipient/name}" class="sapUiSmallMarginboldElements sapthemeHighlight-asColor"/>
            </content>
        </Panel>
            <core:Fragment fragmentName="ui5.SAPUI5.view.Form01" type="XML"/>
</mvc:View>